{% extends"base.html.twig" %}

{% block body %}

    <div class="col-xl-12">
        <!-- START card-->
        <div class="card card-default">
            <div class="card-header">
                {{ "Find for tracking number"| trans }}: {{ trNum  }}
            </div>
            <div class="card-body">
                <!-- START table-responsive-->
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>{{ "Date" | trans }}</th>
                            <th>{{ "StatusDescription" | trans }}</th>
                            <th>{{ "Details" | trans }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if items is defined and items is iterable  and  items is not empty %}
                            {% for itemCriers in items %}
                                {% for item in itemCriers %}
                                    {% if item is not empty %}
                                        <tr>
                                            <td>
                                                {% if item.Date is defined %}
                                                    {{ item.Date }}
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if item.StatusDescription is defined %}
                                                    {{ item.StatusDescription }}
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if item.Details is defined %}
                                                    {{ item.Details }}
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}

                        {% else %}
                            <tr>
                                <td colspan="3">{{ errors }} {{ "Nothing Found" | trans }}</td>
                            </tr>
                        {% endif %}
                        </tbody>
                    </table>
                </div><!-- END table-responsive-->
            </div>

        </div><!-- END card-->
    </div>
{% endblock %}
 {% block javascripts %}{% endblock %}
